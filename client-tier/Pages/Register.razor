@page "/register"
@inject AuthService AuthService
@inject NavigationManager Navigation
@layout EmptyLayout

<div class="login-container">
    <div class="login-card" style="max-width: 480px;">
        <h1 class="login-title">üè• Create Account</h1>
        <p class="login-subtitle">Register to book appointments</p>

        @if (!string.IsNullOrEmpty(message))
        {
            <div class="alert @(isSuccess ? "alert-success" : "alert-error")">@message</div>
        }

        <div class="user-type-selector">
            <button class="user-type-btn @(userType == "PATIENT" ? "active" : "")" @onclick="@(() => SetUserType("PATIENT"))">
                üë§ Patient
            </button>
            <button class="user-type-btn @(userType == "DOCTOR" ? "active" : "")" @onclick="@(() => SetUserType("DOCTOR"))">
                üë®‚Äç‚öïÔ∏è Doctor
            </button>
            <button class="user-type-btn @(userType == "STAFF" ? "active" : "")" @onclick="@(() => SetUserType("STAFF"))">
                üë©‚Äçüíº Staff
            </button>
        </div>

        <EditForm Model="@model" OnValidSubmit="HandleRegister">
            <div class="form-group">
                <label class="form-label">Full Name</label>
                <input type="text" class="form-control" @bind="model.Name" placeholder="Enter your full name" required />
            </div>
            <div class="form-group">
                <label class="form-label">Email</label>
                <input type="email" class="form-control" @bind="model.Email" placeholder="Enter your email" required />
            </div>
            @if (userType == "PATIENT")
            {
                <div class="form-group">
                    <label class="form-label">Phone</label>
                    <input type="tel" class="form-control" @bind="model.Phone" placeholder="Enter your phone number" />
                </div>
            }
            @if (userType == "DOCTOR")
            {
                <div class="form-group">
                    <label class="form-label">Specialization</label>
                    <select class="form-control" @bind="model.Specialization" required>
                        <option value="">Select specialization</option>
                        <option value="General">General</option>
                        <option value="Cardiology">Cardiology</option>
                        <option value="Dermatology">Dermatology</option>
                        <option value="Neurology">Neurology</option>
                        <option value="Orthopedics">Orthopedics</option>
                        <option value="Pediatrics">Pediatrics</option>
                        <option value="Psychiatry">Psychiatry</option>
                    </select>
                </div>
            }
            @if (userType == "STAFF")
            {
                <div class="form-group">
                    <label class="form-label">Role</label>
                    <select class="form-control" @bind="model.Role" required>
                        <option value="">Select role</option>
                        <option value="Receptionist">Receptionist</option>
                        <option value="Administrator">Administrator</option>
                        <option value="Manager">Manager</option>
                    </select>
                </div>
            }
            <div class="form-group">
                <label class="form-label">Password</label>
                <input type="password" class="form-control" @bind="model.Password" placeholder="Create a password" required />
            </div>
            <button type="submit" class="btn btn-primary" style="width: 100%; margin-top: 1rem;" disabled="@isLoading">
                @if (isLoading)
                {
                    <span>Creating account...</span>
                }
                else
                {
                    <span>Create Account</span>
                }
            </button>
        </EditForm>

        <p style="text-align: center; margin-top: 1.5rem; color: var(--text-secondary);">
            Already have an account? <a href="/login" style="color: var(--primary-color);">Sign in</a>
        </p>
    </div>
</div>

@code {
    private RegisterModel model = new();
    private string userType = "PATIENT";
    private string? message;
    private bool isSuccess;
    private bool isLoading;

    private class RegisterModel
    {
        public string Name { get; set; } = "";
        public string Email { get; set; } = "";
        public string Phone { get; set; } = "";
        public string Password { get; set; } = "";
        public string Specialization { get; set; } = "";
        public string Role { get; set; } = "";
    }

    private void SetUserType(string type)
    {
        userType = type;
    }

    private async Task HandleRegister()
    {
        isLoading = true;
        message = null;

        var (success, msg) = await AuthService.RegisterAsync(
            model.Name, model.Email, model.Phone, model.Password,
            userType, model.Specialization, model.Role);

        isSuccess = success;
        message = msg;

        if (success)
        {
            await Task.Delay(1500);
            Navigation.NavigateTo("/login");
        }

        isLoading = false;
    }
}

